{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile {% endblock %}

{% block body %}


<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    User Profile
                </h1>
                <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="blog-home.html"> Reservations </a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->

<!-- Start blog-posts Area -->
<section class="blog-posts-area section-gap">
    <div class="container">
        <div class="row">
            {{ include('user/usermenu.html.twig') }}


            <div class="col-lg-8 sidebar">
                <div class="post-heading">

                    <h3><a href="#">User Reservations List</a> </h3>

                </div>

                <div class="single-widget category-widget">
                    <ul>
                        <table class="table">

                            <tr>
                                <th>Car</th>
                                <td>
                                    <a href="{{ path("car_show",{"id":reservation[0].carid}) }}">
                                        {{ reservation[0].cname }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Content</th><td>{{ reservation[0].rname }}</td>
                            </tr>
                            <tr>
                                <th>Name</th><td>{{ reservation[0].name }}</td>
                            </tr>
                            <tr>
                                <th>Surname</th> <td>{{ reservation[0].surname }}</td>
                            </tr>
                            <tr>
                                <th>Email</th><td>{{ reservation[0].email }}</td>
                            </tr>
                            <tr>
                                <th>Phone</th><td>{{ reservation[0].phone }}</td>
                            </tr>
                            <tr>
                                <th>Pickup</th><td>{{ reservation[0].pickup|date('d-m-Y') }}</td>
                            </tr>
                            <tr>
                                <th>Dropoff</th><td>{{ reservation[0].dropoff|date('d-m-Y') }}</td>
                            </tr>
                            <tr>
                                <th>Days</th><td>{{ reservation[0].days }}</td>
                            </tr>
                            <tr>
                                <th>Total</th><td>{{ reservation[0].total }}</td>
                            </tr>
                            <tr>
                                <th>Message</th> <td>{{ reservation[0].message }}</td>
                            </tr>
                            <tr>
                                <th>Note</th><td>{{ reservation[0].note }}</td>
                            </tr>
                            <tr>
                                <th>Status</th><td>{{ reservation[0].status }}</td>
                            </tr>
                            <tr>
                                <th>Date</th><td>{{ reservation[0].created_at }}</td>
                            </tr>
                        </table>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End blog-posts Area -->

{% endblock %}



{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile {% endblock %}

{% block body %}

    <!-- start banner Area -->
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        User Profile
                    </h1>
                    <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="blog-home.html"> Comments </a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <!-- Start blog-posts Area -->
    <section class="blog-posts-area section-gap">
        <div class="container">
            <div class="row">

                {{ include('user/usermenu.html.twig') }}

                <div class="col-lg-9 sidebar">

                    <div class="single-widget category-widget">
                        <ul>

                            <h4> User Comments List </h4><br>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>Comment</th>
                                    <th>Status</th>
                                    <th>Car</th>
                                    <th>Created_at</th>
                                    <th>Rate</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for comment in comments %}
                                    <tr>
                                        <td>{{ comment.subject }}</td>
                                        <td>{{ comment.comment }}</td>
                                        <td>{{ comment.status }}</td>
                                        <td nowrap=""><a href="{{ path('car_show', {'id': comment.carid}) }}"> {{ comment.title }} </a></td>
                                        <td>{{ comment.created_at }}</td>
                                        <td>{{ comment.rate }}</td>
                                        <td>
                                            <a class="btn btn-info" href="{{ path('admin_comment_edit', {'id': comment.id}) }}">Edit</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-info btn-danger" href="{{ path('admin_comment_edit', {'id': comment.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>


                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}


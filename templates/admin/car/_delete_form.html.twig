<form method="post" action="{{ path('admin_car_delete', {'id': car.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car.id) }}">
    <div class="col-md-1">
        <button class="btn btn-info btn-danger">Del.</button>
    </div>
</form>

{% extends 'homebase.html.twig' %}

{% block title %}{{ car.title }}{% endblock %}
{% block keywords %}{{ car.keywords }}{% endblock %}
{% block description %}{{ car.description }}{% endblock %}

{% block body %}

    <SCRIPT language="JavaScript" type="text/javascript">

        function openWin( windowURL, windowName, windowFeatures ) { window.open( windowURL, windowName, windowFeatures );}

    </SCRIPT>

    <!-- start banner Area -->
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Car Detail
                    </h1>
                    <p class="text-white link-nav"><a href="/">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="/carshow"> {{ car.title }} </a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->

    <section class="blog-posts-area section-gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 post-list blog-post-list col-md-10">
                    <div class="single-post">

                        <div class="row">

                            <div class = "col-md-7">

                                <div class="container">

                                    <div class="active-model-carusel model-area section-gap">

                                        <img class="img-fluid icon icon-zoom-in" src="{{ asset('uploads/images/' ~ car.image) }}" alt=""  style="height: 300px">


                                        <div class="row align-items-center single-model item">
                                            <div class="col-lg-6 model-left">
                                                <div class="title justify-content-between d-flex">
                                                    <h4 class="mt-20"> {{ car.title }} </h4>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 model-right">
                                                <a class="icon icon-zoom-in" href="{{ asset('uploads/images/' ~ car.image) }}">
                                                    <img class="img-fluid" src="{{ asset('uploads/images/' ~ car.image) }}" alt="" >
                                                </a>
                                            </div>
                                        </div>

                                        {% for rs in images %}
                                            <div class="row align-items-center single-model item">
                                                <div class="col-lg-6 model-left">
                                                    <div class="title justify-content-between d-flex">
                                                        <h4 class="mt-20"> {{ rs.title }} </h4>
                                                    </div>

                                                </div>

                                                <div class="col-lg-6 model-right">
                                                    <a class="icon icon-zoom-in" href="{{ asset('uploads/images/' ~ rs.image) }}">
                                                        <img class="img-fluid" src="{{ asset('uploads/images/' ~ rs.image) }}" style=" height: 300px" alt="">
                                                    </a>
                                                </div>
                                            </div>
                                        {% endfor %}

                                    </div>
                                </div>


                            </div>

                            <div class = "col-md-5">
                                <h3> <a href="#"> {{ car.title }} </a> </h3>


                                <table class="table">
                                    <tbody>

                                    <tr>
                                        <th>Description</th>
                                        <td>{{ car.description }}</td>
                                    </tr>

                                    <tr>
                                        <th>Marka</th>
                                        <td>{{ car.marka }}</td>
                                    </tr>
                                    <tr>
                                        <th>Model</th>
                                        <td>{{ car.model }}</td>
                                    </tr>
                                    <tr>
                                        <th>Caryear</th>
                                        <td>{{ car.caryear }}</td>
                                    </tr>
                                    <tr>
                                        <th>Fuel</th>
                                        <td>{{ car.fuel }}</td>
                                    </tr>
                                    <tr>
                                        <th>Transmission</th>
                                        <td>{{ car.transmission }}</td>
                                    </tr>
                                    <tr>
                                        <th>Capacity</th>
                                        <td>{{ car.capacity }}</td>
                                    </tr>
                                    <tr>
                                        <th>Kilometre</th>
                                        <td>{{ car.kilometre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Price</th>
                                        <td>{{ car.price }}</td>
                                    </tr>
                                    <tr>
                                        <th>Airbag</th>
                                        <td>{{ car.airbag }}</td>
                                    </tr>
                                    <tr>
                                        <th>City</th>
                                        <td>{{ car.city }} / {{ car.country }}</td>
                                    </tr>


                                    </tbody>
                                </table>


                            </div>
                        </div>


                        <div class="col-md-12 section-top-border">
                            <div class="tabbable tab-content">
                                <ul class="nav nav-tabs ">

                                    <li class="active col-md-2"><a href="#one" data-toggle="tab"><i class="icon-briefcase"></i> Contents & Price </a> </li>

                                    <li class="col-md-3"><a href="#two" data-toggle="tab"> Car Detail Information </a>  </li>

                                    <li class="col-md-2"><a href="#three" data-toggle="tab"> Comments </a> </li>

                                </ul>

                                <div class="tab-content">
                                    <div class="tab-pane active" id="one">
                                        <blockquote class="generic-blockquote">


                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Image</th>
                                                    <th>Price</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for content in contents %}
                                                    <tr>
                                                        <td>{{ content.title }}</td>
                                                        <td>{{ content.description }}</td>
                                                        <td><img src="{{ asset('uploads/images/' ~ content.image) }}" height="80"></td>
                                                        <td>{{ content.price }}</td>
                                                        <td>

                                                            <form action="{{ path('user_reservation_new', {'cid': content.carid,'rid': content.id}) }}" method="post">
                                                                Days <input type="number" id="days" name="days" value="1" >
                                                                Pickup Date: <input type="date" id="pickup" name="pickup" style="width: 140px" required>

                                                                <input type="submit" value="Reserve Car" class="btn btn-success">
                                                            </form>

                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="9">no contents found</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>



                                        </blockquote>

                                    </div>
                                    <div class="tab-pane" id="two">
                                        <blockquote class="generic-blockquote">
                                            {{ car.detail |raw }}
                                        </blockquote>
                                    </div>
                                    <div class="tab-pane" id="three">
                                        <blockquote class="generic-blockquote">

                                            {% for rs in comments %}
                                                <h5>{{ rs.subject }} [Rate : {{ rs.rate }}]</h5>
                                                <p>
                                                    {{ rs.comment }}
                                                </p>
                                                <hr>
                                            {% endfor %}

                                            {% if app.user %}

                                                <h4>Write your comment</h4><br>
                                                {{ include('messages.html.twig') }}


                                                <form name="comment" action="{{ path('user_new_comment', {'id': car.id}) }}" class="form-area " role="form"  method="post" class="contact-form text-right">
                                                    <div class="row">
                                                        <div class="col-lg-5 form-group">

                                                            <input id="comment_subject" name="comment[subject]" placeholder="Enter your subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your subject'" class="common-input mb-20 form-control" required="" type="text">
                                                            <div class="validation"></div>

                                                            <div class="span2" form-group>
                                                                <select id="comment_rate" name="comment[rate]" class="common-input mb-20 form-control">
                                                                    <option>1</option>
                                                                    <option>2</option>
                                                                    <option>3</option>
                                                                    <option>4</option>
                                                                    <option>5</option>
                                                                </select>
                                                            </div>

                                                            <div class="mt-20 alert-msg" style="text-align: left;"></div>
                                                        </div>

                                                        <div class="col-lg-6 form-group">
                                                            <textarea class="common-textarea form-control" id="comment_comment" name="comment[comment]" placeholder="Comment" maxlength="255" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Message'" required=""></textarea>
                                                            <div class="validation"></div>
                                                            <div class="text-center">
                                                                <input type="hidden" name="token" value="{{ csrf_token('comment') }}" />
                                                                <button class="primary-btn mt-20 text-black" type="submit" style="float: right;">Send Comment</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            {% else %}
                                                <li>
                                                    <a href="/loginuser"><i class="icon-lock"></i>If you want to add comment please Login </a>
                                                </li>
                                            {% endif %}


                                        </blockquote>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {#<section class="comment-sec-area pt-80 pb-80">
        <div class="container">
            <div class="comment-list">
                <div class="single-comment justify-content-between d-flex">
                    <div class="user justify-content-between d-flex">
                        <div class="desc">

                            {% for rs in comments %}
                                <h5>{{ rs.subject }} [Rate : {{ rs.rate }}]</h5>
                                <p>
                                    {{ rs.comment }}
                                </p>
                                <hr>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    #}



{% endblock %}

{% extends 'homebase.html.twig' %}

{% block title %}Contact|{{ setting[0].title }}{% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block description %}{{ setting[0].description }}{% endblock %}

{% block body %}

    <!-- start banner Area -->
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Contact Us
                    </h1>
                    <p class="text-white link-nav"><a href="/">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="/contact"> Contact Us</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->

    <!-- Start contact-page Area -->
    <section class="contact-page-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 d-flex flex-column address-wrap">
                    <h3 class="rheading"> Contact Information </h3><br>


                    <div class=" social-widget">
                        <div class="single-footer-widget">
                            <h6>Follow Us</h6>
                            <p>Let us be social</p>
                            <div class="footer-social d-flex align-items-center">
                                <a href={{ setting[0].facebook }}><i class="fa fa-facebook"></i></a>
                                <a href="{{ setting[0].twitter }}"><i class="fa fa-twitter"></i></a>
                                <a href="{{ setting[0].instagram }}"><i class="fa fa-instagram"></i></a>

                            </div>
                        </div>
                    </div><br>

                    {{ setting[0].contact |raw }}


                </div>
                <div class="col-lg-7">

                    <h3>Contact Form</h3><br>
                    {{ include('messages.html.twig') }}


                    <form name="messages" class="form-area " role="form"  method="post" class="contact-form text-right">
                        <div class="row">
                            <div class="col-lg-5 form-group">
                                <input  id="messages_name" name="messages[name]" placeholder="Enter your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" class="common-input mb-20 form-control" required="" type="text">
                                <div class="validation"></div>

                                <input id="messages_email" name="messages[email]" placeholder="Enter email address" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" class="common-input mb-20 form-control" required="" type="email">
                                <div class="validation"></div>

                                <input id="messages_subject" name="messages[subject]" placeholder="Enter your subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your subject'" class="common-input mb-20 form-control" required="" type="text">
                                <div class="validation"></div>

                                <div class="mt-20 alert-msg" style="text-align: left;"></div>
                            </div>

                            <div class="col-lg-6 form-group">
                                <textarea class="common-textarea form-control" id="messages_message" name="messages[message]" placeholder="Message" maxlength="255" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Message'" required=""></textarea>
                                <div class="validation"></div>
                                <div class="text-center">
                                   <input type="hidden" name="token" value="{{ csrf_token('form-message') }}" />
                                   <button class="primary-btn mt-20 text-white" type="submit" style="float: right;">Send Message</button>
                                 </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- End contact-page Area -->




{% endblock %}
